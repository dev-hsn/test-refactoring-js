<head>
    <meta charset="utf-8">    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">    
    <title>CHANEL - {{ product.name }}</title>
    <meta name="description" content="{{ product.description }}">
    <!-- reponsive meta -->
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/styles/main.css"/>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header class="header bg-dark" role="header">
        <div class="container">
            <h1 class="header__title text-center text-light">{{ product.name }}</h1>
        </div>
    </header>
    <section class="product container wrapper" role="application">
        <div class="row">
            <div class="col-4">
                <figure>
                    <img class="product__card-img-top" src="/images/{{ product.image }}" />
                    <figcaption class="product__name indent">{{ product.name }}</figcaption>
                </figure>
            </div><!-- /.col-4 -->
            <div class="col-8">
                <p class="product__description">{{ product.description }}</p>
                <p class="product__stock">Stock level: {{ product.stock }}</p>
                <a class="btn btn-primary btn--primary" href="/products/cart/{{ product.id }}">Buy</a>
            </div><!-- /.col-8 -->
        </div><!-- /.row -->
    </section><!-- /.product -->
    <footer class="footer text-center" role="footer">
        <a href="http://www.chanel.com" class="footer__logo"></a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>